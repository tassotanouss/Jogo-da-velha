#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define SIZE 3

void jogar();
int verificarVitoria(char tabuleiro[SIZE][SIZE], char jogador);

int main() {
    int opcao;

    do {
        printf("\n----- Menu -----\n");
        printf("1. Jogar (3x3)\n");
        printf("2. Ver Ranking\n");
        printf("3. Creditos\n");
        printf("4. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);

        switch(opcao) {
            case 1: jogar(); break;
            case 2: printf("Ranking\n"); break;
            case 3: printf("Creditos: Desenvolvido por Victor Mota, Leornardo Mendon√ßa, Pedro Barbosa, Vitor Pimentel, Tasso Tanouss, Luan Santos\n"); break;
            case 4: printf("Saindo...\n"); break;
            default: printf("Opcao invalida\n");
        }
    } while(opcao != 4);

    return 0;
}

int verificarVitoria(char tabuleiro[SIZE][SIZE], char jogador) {
    for (int i = 0; i < SIZE; i++) {
        if ((tabuleiro[i][0] == jogador && tabuleiro[i][1] == jogador && tabuleiro[i][2] == jogador) || 
            (tabuleiro[0][i] == jogador && tabuleiro[1][i] == jogador && tabuleiro[2][i] == jogador)) {
            return 1;
        }
    }
    if ((tabuleiro[0][0] == jogador && tabuleiro[1][1] == jogador && tabuleiro[2][2] == jogador) || 
        (tabuleiro[0][2] == jogador && tabuleiro[1][1] == jogador && tabuleiro[2][0] == jogador)) {
        return 1;
    }
    return 0;
}

void jogar() {
    char tabuleiro[SIZE][SIZE] = {{' ', ' ', ' '}, {' ', ' ', ' '}, {' ', ' ', ' '}};
    int linha, coluna, movRestantes = SIZE * SIZE;
    char jogador = 'X';

    srand(time(NULL));

    while (movRestantes--) {
        printf("\n----- Jogo (%dx%d) -----\n", SIZE, SIZE);
        for (int i = 0; i < SIZE; i++) {
            for (int j = 0; j < SIZE; j++) {
                printf("%c ", tabuleiro[i][j]);
                if (j < SIZE - 1) printf("| ");
            }
            printf("\n");
            if (i < SIZE - 1) printf("-- -- --\n");
        }

        if (jogador == 'O') {
            do {
                linha = rand() % SIZE;
                coluna = rand() % SIZE;
            } while (tabuleiro[linha][coluna] != ' ');
        } else {
            do {
                printf("Jogador %c, digite linha e coluna (1-3): ", jogador);
                scanf("%d %d", &linha, &coluna);
                linha--; coluna--;
                if (linha < 0 || linha >= SIZE || coluna < 0 || coluna >= SIZE || tabuleiro[linha][coluna] != ' ') {
                    printf("Movimento invalido. Tente novamente.\n");
                }
            } while (linha < 0 || linha >= SIZE || coluna < 0 || coluna >= SIZE || tabuleiro[linha][coluna] != ' ');
        }

        tabuleiro[linha][coluna] = jogador;
        
        if (verificarVitoria(tabuleiro, jogador)) {
            printf("Jogador %c vence!\n", jogador);
            return;
        }

        jogador = (jogador == 'X') ? 'O' : 'X';
    }

    printf("Empate!\n");
}
